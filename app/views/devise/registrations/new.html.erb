<div class="columns">
  <div class="column is-white">
  </div>
  <div class="column is-white">
    <div class="section">
      <div class="card">
        <div class="card-content">
          <p class="header" style="font-family: Helvetica-Neue, Arial, Sans-Serif; color:Black; font-size: 48px;">
            <strong>Sign up</strong>
          </p>
          <br>
          <%= f.input :email, input_html: { autocomplete: "email" }, wrapper: false, required: true, autofocus: true, label_html: { class: 'label' } %>
          <%= f.input :password, input_html: { autocomplete: "new-password" }, wrapper: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), required: true, label_html: { class: 'label' } %>
          <%= f.input :password_confirmation, input_html: { autocomplete: "new-password" }, wrapper: false, required: true, label_html: { class: 'label' } %>
        </div>
        <footer class="card-footer">
          <p class="card-footer-item">
            <%= f.button :submit, "Sign up", class: "button is-black" %>
          </p>
        </footer>
      </div>
    </div>
  </div>
  <div class="column is-white">
  </div>
</div>

<% end %>

