<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <!--
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
  -->

  <div class="columns">
    <div class="column is-white">
    </div>
    <div class="column is-white">
      <div class="section">
        <div class="card">
          <div class="card-content">
            <p class="header" style="font-family: Helvetica-Neue, Arial, Sans-Serif; color:Black; font-size: 48px;">
              <strong>Log in</strong>
            </p>
            <br>
            <%= f.input :email, input_html: { autocomplete: "email" }, wrapper: false, required: false, autofocus: true, label_html: { class: 'label' } %>
            <%= f.input :password, input_html: { autocomplete: "current-password" }, wrapper: false, required: false, label_html: { class: 'label' } %>

            <br><br>
            <%= render "devise/shared/links" %>
          </div>
          <footer class="card-footer">
            <p class="card-footer-item">
              <%= f.button :submit, "Log in", class: "button is-black" %>
            </p>
          </footer>
        </div>
      </div>
    </div>
    <div class="column is-white">
    </div>
  </div>



<% end %>
