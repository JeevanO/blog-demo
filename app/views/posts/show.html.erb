<section class="section">
  <div class="container">
    <h1 class="title">
      <%= @post.title %>
    </h1>


    <% if current_user && current_user.admin %>
    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <%= link_to "Edit", edit_post_path(@post), class:"button is-black"%>
        </p>
        <p class="level-item">
          <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "button is-danger" %>
        </p>
      </div>

      <div class="level-right">
        <p class="level item">

        </p>
      </div>
    </nav>
    <% end %>

    <hr>

    <div class="content">
      <%= @post.content %>
    </div>


  </div>
</section>

<section class="section comments">
  <div class="container">

    <div class="columns">
      <div class="column is-white">
        <h2><strong><%= @post.comments.count %></strong> Comments </h2>
        <%= render @post.comments %>
      </div>

      <div class="column is-white">
        <div class="comment-form">
          <h3>Leave a comment</h3>
          <%= render 'comments/form' %>
        </div>
      </div>
    </div>
    
  </div>

</section>
